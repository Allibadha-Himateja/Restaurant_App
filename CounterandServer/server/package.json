{
  "name": "restaurant-server",
  "version": "1.0.0",
  "description": "Restaurant Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --out-path=dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "mssql": "^10.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "server.js",
      "config/*.js",
      "services/*.js",
      "routes/*.js",
      "middleware/*.js"
    ],
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "keywords": ["restaurant"],
  "author": "Restaurant Server",
  "license": "MIT"
}